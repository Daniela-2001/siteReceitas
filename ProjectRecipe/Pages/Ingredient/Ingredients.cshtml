@page
@model ProjectRecipe.Pages.Ingredient.IngredientsModel
@{
    ViewData["Title"] = "Cadastro de Ingrediente da receita id: " + Model.IdRecipeSelecionada;
}

<script type="text/javascript">

    function deletarItem(itemId, nameId, idRecipe) 
    {
        var varElement = document.getElementById('id-deletar');
        var varNome    = document.getElementById('name-deletar');
        var varRecipe = document.getElementById('id-recipe');

        if (varElement) {
            varElement.value = itemId;
        } 
        if( varNome){
            varNome.value = nameId;
        }
        if (varRecipe) {
            varRecipe.value = idRecipe;
        }

        // atribuir id a rota
        document.getElementById('deleteForm').action = '/Ingredient/Ingredients?IdDeletar=' + itemId;
        // carrega a pagina model
        $('#myDelete').modal('show');
    }
</script>

<h1>@ViewData["Title"]</h1>

<table class="table table-sm table-striped table-color-recipe">
    <thead>
        <tr>
            <th scope="col">
                <!--<button type="button" class="btn btn-primary">Cadastrar</button>-->
                <a href="/Ingredient/IngredientCreate?id=@Model.IdRecipeSelecionada" action="/Ingredient/IngredientCreate" class="btn btn-primary btn-color-cad">Cadastrar 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-database-add" viewBox="0 0 16 16">
                    <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.5-5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0v-1h-1a.5.5 0 0 1 0-1h1v-1a.5.5 0 0 1 1 0"/>
                    <path d="M12.096 6.223A5 5 0 0 0 13 5.698V7c0 .289-.213.654-.753 1.007a4.5 4.5 0 0 1 1.753.25V4c0-1.007-.875-1.755-1.904-2.223C11.022 1.289 9.573 1 8 1s-3.022.289-4.096.777C2.875 2.245 2 2.993 2 4v9c0 1.007.875 1.755 1.904 2.223C4.978 15.71 6.427 16 8 16c.536 0 1.058-.034 1.555-.097a4.5 4.5 0 0 1-.813-.927Q8.378 15 8 15c-1.464 0-2.766-.27-3.682-.687C3.356 13.875 3 13.373 3 13v-1.302c.271.202.58.378.904.525C4.978 12.71 6.427 13 8 13h.027a4.6 4.6 0 0 1 0-1H8c-1.464 0-2.766-.27-3.682-.687C3.356 10.875 3 10.373 3 10V8.698c.271.202.58.378.904.525C4.978 9.71 6.427 10 8 10q.393 0 .774-.024a4.5 4.5 0 0 1 1.102-1.132C9.298 8.944 8.666 9 8 9c-1.464 0-2.766-.27-3.682-.687C3.356 7.875 3 7.373 3 7V5.698c.271.202.58.378.904.525C4.978 6.711 6.427 7 8 7s3.022-.289 4.096-.777M3 4c0-.374.356-.875 1.318-1.313C5.234 2.271 6.536 2 8 2s2.766.27 3.682.687C12.644 3.125 13 3.627 13 4c0 .374-.356.875-1.318 1.313C10.766 5.729 9.464 6 8 6s-2.766-.27-3.682-.687C3.356 4.875 3 4.373 3 4"/>
                    </svg>
                </a>
            </th>
            <th scope="col">Id</th>
            <th scope="col">Descrição do ingrediente</th>
            <th scope="col">Quantidade do ingrediente</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.ListaIngredientes.Count; i++)
        {
            <tr>
            <td>
                <!-- <button type="button" class="btn btn-success">Alterar</button>-->
                    <a href="/Ingredient/IngredientUpdate?id=@Model.ListaIngredientes[i].Id" action="/Ingredient/IngredientUpdate" class="btn btn-success btn-color-alt">Alterar 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                    </svg>
                </a>

                <button type="button" class="btn btn-danger btn-color-del" onclick="deletarItem('@Model.ListaIngredientes[i].Id', '@Model.ListaIngredientes[i].Description', @Model.ListaIngredientes[i].IdRecipe)">Deletar
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                        <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                        </svg>
                </button>
                        <!--Button carregando um formulário Modal sem usar JavaScript usando o Bootstrap
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myDelete">
                            Delete 2.
                        </button>-->         
            </td>

            <td>@Model.ListaIngredientes[i].Id</td>
            <td>@Model.ListaIngredientes[i].Description</td>
            <td>@Model.ListaIngredientes[i].Quantity</td>

            </tr>

        }


    </tbody>
</table>



<!--Formulário Modal-->
<div class="modal fade mx-5" id="myDelete" name="myDelete" tabindex="-1" role="dialog">

     <div class="modal-dialog" role="document">
        <div class="modal-content">
           <div class="modal-header">
              <h3 class="modal-title" id="myModalLabel">Item a ser Cancelado/Deletado</h3>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
           </div>

           <div class="modal-body">
                    <!--<form method="post" id="deleteForm" asp-page-handler="DeletarItem" > -->
                 <form method="post" id="deleteForm"  >
                    <div class="form-group">
                        <input type="text" name="id-deletar" id="id-deletar" readonly>
                        <input type="text" name="name-deletar" id="name-deletar" readonly>
                        <input type="text" name="id-recipe" id="id-recipe" readonly hidden>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-color-volta" data-bs-dismiss="modal" >Voltar/Fechar</button>
                        <button type="submit" class="btn btn-warning btn-color-confirma">Confirmar Exclusao</button>
                    </div>

                 </form>

           </div>

        </div>
     </div>
</div>
