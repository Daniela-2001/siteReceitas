@page
@model ProjectRecipe.Pages.Login.LoginUserModel
@{
    ViewData["Title"] = "Login do usuário";

}
<h1>@ViewData["Title"]</h1>

<form method="post">

    <div class="form-group my-3">
        <label for="Email">Informe o email de login ao sistema</label>
        <input type="email" class="form-control" id="Email" name="Email" placeholder="Informe o e-mail do usuário">
    </div>

    <div class="form-group my-3">
        <label for="Password">Informe o password</label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="Informe o password">
    </div>

    <div class="form-group my-3">

        <a class="btn btn-secondary btn-color-volta" asp-page="/Index" role="button">Cancelar</a>
        <button type="submit" class="btn btn-warning btn-color-confirma">Login</button>


    </div>
</form>
