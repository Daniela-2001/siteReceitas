@page
@using ProjectRecipe.Model;
@model ProjectRecipe.Pages.PublishRecipe.PublishRecModel
@{
    ViewData["Title"] = "Aprovar ou desaprovar receita";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-sm table-striped table-color-recipe">
    <thead>
        <tr>
            <th scope="col">Aprovar e desaprovar</th>
            <th scope="col">Id</th>
            <th scope="col">Título da receita</th>
            <th scope="col">Id do usuário</th>

        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < Model.ListaReceita.Count; i++)
        {
                <tr>
                    <td>

                        <form method="post" asp-route-idAvaliar=@Model.ListaReceita[i].Id>
                        @if (Model.ListaReceita[i].Approval == ApprovalEnum.Approved)
                        {
                                    <button type="submit" name="aprovado" class="btn btn-success" >
                                        Aprovado
                                    </button>

                        }
                        else
                        {
                                    <button type="submit" name="cancelado" class="btn btn-danger" >
                                        Não Aprovado
                                    </button>

                        }
                        </form>

                    </td>

                    <td>@Model.ListaReceita[i].Id</td>
                    <td>@Model.ListaReceita[i].Title</td>
                    <td>@Model.ListaReceita[i].IdUser</td>
                   
                </tr>
        }

    </tbody>
</table>